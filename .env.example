APP_NAME=FastAPI Service
APP_VERSION=1.0.0
APP_DESCRIPTION=Production-ready FastAPI service
APP_ENV=development
DEBUG=true
SECRET_KEY=change-me-in-production

# SQL Database
DB_SQL_ENABLED=true
DB_SQL_URL=sqlite+aiosqlite:///./app.db
DB_SQL_ECHO=false
DB_SQL_POOL_SIZE=5
DB_SQL_MAX_OVERFLOW=10

# MongoDB (optional)
DB_MONGO_ENABLED=false
DB_MONGO_URL=mongodb://localhost:27017
DB_MONGO_DATABASE=app

# Redis (optional - used for caching, rate limiting, background tasks)
DB_REDIS_ENABLED=false
DB_REDIS_URL=redis://localhost:6379/0

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=true
SERVER_WORKERS=1

# Rate Limiting (requires Redis)
RATELIMIT_ENABLED=false
RATELIMIT_DEFAULT=100/minute

# CORS
CORS_ENABLED=true
CORS_ORIGINS=["http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=["GET","POST","PUT","PATCH","DELETE"]
CORS_ALLOW_HEADERS=["*"]

# Logging
LOG_LEVEL=INFO
LOG_JSON_FORMAT=false
